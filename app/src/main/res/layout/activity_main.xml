<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3535"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgMaxiseLogo"
        android:layout_width="185dp"
        android:layout_height="171dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/txtMaxiseText"
        app:layout_constraintEnd_toStartOf="@+id/imgRightArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/Logo_Transparent" />

    <ImageView
        android:id="@+id/imgRightArrow"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:onClick="nextPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMaxiseLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="165dp"
        android:text="Up Your Fitness Level"
        android:textColor="#C2BABA"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMaxiseText" />

    <TextView
        android:id="@+id/txtMaxiseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="133dp"
        android:text="Maxise"
        android:textColor="#C2BABA"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/imgMaxiseLogo"
        app:layout_constraintTop_toBottomOf="@+id/imgMaxiseLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>